@model IEnumerable<VillaNumberDto>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumberController1" asp-action="CreateVillaNumber"
               class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill"></i> Create new Villa Number
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                   Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.villa.Name</td>
                    <td>@item.villa.Occupancy</td>
                    <td>@item.villa.Rate.ToString("c")</td>
                    <td>
                        <a asp-controller="VillaController1" asp-action="UpdateVillaNumber"
                       asp-route-villaNo="@item.VillaNo"
                       class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Edit  Villa Number
                        </a>
                        <a asp-controller="VillaNumberController1" asp-action="DeleteVillaNumber"
                       asp-route-villaNo="@item.VillaNo"
                       class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete  Villa
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
